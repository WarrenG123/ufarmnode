doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='/bootstrap/css/bootstrap.css')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css')
  // <link rel="stylesheet" href="/bootstrap/css/bootstrap-grid.css">
  style.
    .nav {
    content: justify center;
    }
   .btn.btn-primary {
    margin-top: 10px !important;
    }
    .row {
    margin: 30px;
    border: solid rgb(9, 99, 9);
    border-radius: 25px;
    padding-bottom: 30px;
    }
    .card-img-top {
    height: 200px;
    }
    h5 {
    text-align: right;
    font-size: medium;
    }
  title Products
// nav starts Here
div(w3-include-html='/includes/navbar.html')
// nav bar ends here
.container-fluid.mt-3
  .container-fluid
    .row
      h4  Products
      //- h5 See all
      if products.length 
          each product in products
            .col-3
              .card
                .card-body
                  img(src=product.productimage,alt='image to be uploaded', style='max-width:250px; height:auto;')
                  .card-footer
                    |  Product : #{product.productname}
                    br
                    |   Price: UGX #{product.unitprice} each  
                    br
                    | Quantity:#{product.quantity}
                    br
                    |
                    form(method="POST" action="/buy")
                      input(type="hidden", name="productId", value=product._id )
                      button.btn.btn-primary(type="submit") Buy
      else 
                    p 
                      h4 There are no products yet, check again in a few minutes
  
// footer starts here
div(w3-include-html='/includes/footer.html')
// footer ends here
script(src='/bootstrap/js/bootstrap.bundle.js')
script(src='/includes/custom.js')
