doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='/bootstrap/css/bootstrap.css')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css')
  // <link rel="stylesheet" href="/bootstrap/css/bootstrap-grid.css">
  style.
    .nav {
    content: justify center;
    }
    .row {
    padding-bottom: 30px;
    }
    button {
    background-color: rgb(66, 66, 177);
    }
    .callbutton {
    padding-left: 500px;
    }
    .row {
    margin: 30px;
    border: solid rgb(9, 99, 9);
    border-radius: 25px;
    }
    .card-img-top {
    height: 200px;
    }
    h5 {
    text-align: right;
    font-size: medium;
    }
  title Products
// nav starts Here
div(w3-include-html='/includes/navbar.html')
// nav bar ends here
.container-fluid.mt-3
  .container-fluid
    .row
      h4 Diary products
      //- h5 See all
      if products.length 
          each product in products
            .col-3
              .card
                .card-body
                  img(src=product.productimage,alt='image to be uploaded', style='max-width:250px; height:auto;')
                  p.card.text
                  | #{product.productname}
                  br
                  |                 #{product.pType}|| 
                  br
                  |                 UGX #{product.unitprice} #{product.quantity}
                  button.btn.btn-primary.btn-sm(type='button' ) Buy
                  button.btn.btn-success.btn-sm.callbutton(type='button')
                  i.bi.bi-telephone
                      | call
      else 
                    p 
                      h4 There are no products yet, check again in a few minutes
  
// footer starts here
div(w3-include-html='/includes/footer.html')
// footer ends here
script(src='/bootstrap/js/bootstrap.bundle.js')
script(src='/includes/custom.js')
