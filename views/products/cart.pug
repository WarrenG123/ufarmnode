doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='/bootstrap/css/bootstrap.css')
  link(rel='stylesheet' href='/bootstrap/css/bootstrap-grid.css')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css')
  title cart
  style.
    .checkbutton {
    text-align: center;
    margin-top: 10px;
    }
    .summary{
    margin-bottom: 200px;
    }
    article{
    border-style:groove;
    border-radius: 10px;
    background-color: whitesmoke;
    }
// nav starts Here
div(w3-include-html='/includes/navbar.html')
// nav bar ends here
.container-fluid
  .row
    .col-8
      article
        header
          h4 Cart
        .row
          .col-4
            | image
          .col-4
            | name
          .col-4
            | quantity
          .col-4
            | price
    .col-4
      article.summary
        h4 Cart summary
        form.form-inline(action='#' method='post')
          label Total:
          input#total.form-control(type='text' name='total' placeholder='UGX 0000')
          small#tlErr
          .checkbutton
            button#checkout.btn.btn-success CHECKOUT
// footer starts here
div(w3-include-html='/includes/footer.html')
// footer ends here
script(src='/includes/custom.js')
script(src='/bootstrap/js/bootstrap.js')
script(src='/bootstrap/js/bootstrap.bundle.js')
