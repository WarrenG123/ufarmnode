if data.length 
  each product in data
    .container-fluid
      .row
        .col
          article.main
            .card
              img.card-img-top(src='...' alt='...')
              .card-body
                .card-text
              .card-footer
                h4 Product Name
                button.btn-success IN STOCK
            div
              section
                p
                  | price:UGX2000 Quantity:2kgs 
                  br
                  br
                  |                                 type:Organic Address: Gulu
                  br
                  br
              button#call.btn.btn-success
                i.bi.bi-telephone
                |  Call
              |    Farmer:
        .col-4
          article.chatbox
            h4 Need more detail?
            .chat
              button#chat.btn.btn-success
                i.bi.bi-chat-left-text
                |  start
                |                             chat
          article.deliver
            header
              h4 Mode of delivery
            div
              p
                i.bi.bi-truck
                |  Home delivery 
                br
                |                             We deliver to you
            div
              p
                i.bi.bi-person
                |  Pick up 
                br
                |                             You come to pick the product
          article.pay
            header
              h4 Options for payment
            div
              p
                i.bi.bi-cash-coin
                |  Cash 
                br
            div
              p
                i.bi.bi-send-check
                |  Mobile Money 
                br
