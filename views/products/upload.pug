doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='/bootstrap/css/bootstrap.css')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css')
  title Upload
  style.
    .card-body{
    background-color: white;
    }
// nav starts Here
div(w3-include-html='/includes/navbar.html')
// nav bar ends here
.container-fluid
  .row.justify-content-center
    .col-md-10
      .card
        .card.header
          h4 Upload here
        img.card-img-side(src='' alt='food product')
        .card-body
          form#upload(action='#' name='upload form' onsubmit='validate(event)' method='post')
            .form.form-group
              label Product name
              input#pName.form-control(type='text' name='product name')
              small#pNameErr
            .form.form-group
              label Ward name
              input#wd.form-control(type='text' name='ward name')
              small#wdErr
            .form.form-group
              label Date
              input#date.form-control(type='date' name='date')
              small#dateErr
            .form.form-group
              label Unit price
              input#uP.form-control(type='text' placeholder='UGX' name='unit price')
              small#uPErr
            .form.form-group
              label Quantity
              input#qty.form-control(type='text' name='quantity')
              small#qtyErr
            .form.form-group
              label Address
              input#adr.form-control(type='text' name='address')
              small#adrErr
            .form.form-group
              label Mode of payment
              label.form-check
                input#cash.form-check-input(type='checkbox' name='Cash')
                span Cash
              label.form-check
                input#mMoney.form-check-input(type='checkbox' name='mobile money')
                span Mobile Money
              small#payErr
            .form.form-group
              label Mode of delivery
              label.form-check
                input#pick.form-check-input(type='checkbox' name='pickup')
                span Pick up
              label.form-check
                input#hDeli.form-check-input(type='checkbox' name='home delivery')
                span Home delivery
              small#deliErr
            .form.form-group
              label Produce type
              label.form-check
                input#org.form-check-input(type='radio' name='pType')
                span Organic
              label.form-check
                input#nOrg.form-check-input(type='radio' name='pType')
                span Non-organic
              small#typeErr
            button#submit.btn-primary Submit
// footer starts here
div(w3-include-html='/includes/footer.html')
// footer ends here
script(src='/bootstrap/js/bootstrap.js')
script(src='validate/uploadValidate.js')
script(src='includes/custom.js')
