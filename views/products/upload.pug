  title Upload
  style.
    .row{
    padding-top: 20px;
    }
    .card {
    margin-bottom: 20px;
    }
    .button{
    margin-top: 10px;
    }
    .image {
    background-image: url("/image/farmland.jpg");
    /* The image used */
    background-color: #cccccc; /* Used if the image is unavailable */
    background-position: relative;
    background-repeat: no-repeat;
    background-size: cover;
    background-attachment: fixed;
    }
    .form-group{
      background-color: azure;
    }
.image
  #mySidebar.w3-sidebar.w3-bar-block.w3-border-right
      button.w3-bar-item.w3-large(onclick='w3_close()') Close &times;
      a.w3-bar-item.w3-button(href='/upload') Upload Produce
      a.w3-bar-item.w3-button(href='#') Bookings and Orders
      a.w3-bar-item.w3-button(href='/ufdash') Back
  .w3-green
    button.w3-button.w3-green.w3-xlarge(onclick='w3_open()') &#x2630
            h4
              b Urban Farmer Dashboard
  .container-fluid
    .row.justify-content-center
      .col-md-7
        .card
          .card.header
            h5 UPLOAD HERE
          .card-body
            form#upload(action='/upload' name='upload form' onsubmit='validate(event)' method='post' enctype="multipart/form-data")
              .form.form-group
                label Product image
                input#pImage.form-control(type='file' name='productimage')
                small#imgErr
              .form.form-group
                label  Name
                input#fName.form-control(type='text' name='fName' placeholder='Enter your name')
                small#fNameErr
              .form.form-group
                label Product name
                input#pName.form-control(type='text' name='productname')
                small#pNameErr
              .form.form-group
                label Ward
                select#ward.form-control(name='ward')
                  option(value='') (Select a ward)
                  option(value='1') 1
                  option(value='2') 2
                  option(value='3') 3
                  option(value='4') 4
                small#wdErr
              .form.form-group
                label Date
                input#date.form-control(type='date' name='date')
                small#dateErr
              .form.form-group
                label Unit price
                input#uP.form-control(type='text' placeholder='UGX' name='unitprice')
                small#uPErr
              .form.form-group
                label Quantity
                input#qty.form-control(type='text' name='quantity')
                small#qtyErr
              .form.form-group
                label Address
                input#adr.form-control(type='text' name='address')
                small#adrErr
              .form.form-group
                label Mode of payment:
                label.form-check
                  input#cash.form-check-input(type='checkbox' name='payMthd' value='Cash')
                  span Cash
                label.form-check 
                  input#mMoney.form-check-input(type='checkbox' name='payMthd' value='Mobile Money')
                  span Mobile Money
                small#payErr
              .form.form-group
                label Mode of delivery:
                label.form-check 
                  input#pick.form-check-input(type='checkbox' name='delivery' value='Pickup')
                  span Pick up
                label.form-check
                  input#hDeli.form-check-input(type='checkbox' name='delivery' value='Home Delivery')
                  span Home delivery
                small#deliErr
              .form.form-group
                label Produce type:
                label.form-check.form-check-inline
                  input#org.form-check-input(type='radio' name='pType' value='organic')
                  span Organic
                label.form-check.form-check-inline
                  input#nOrg.form-check-input(type='radio' name='pType' value='Non-organic')
                  span Non-organic
                small#typeErr
              //- .form.form-group
              //-   label Status: 
              //-   label.form-check.form-check-inline 
              //-     input#yes.form-check-input(type='radio' name='status' value='Approved' disabled)
              //-     span Approved
              //-   label.form-check.form-check-inline
              //-     input#no.form-check-input(type='radio' name='status' value='Declined' disabled )
              //-     span Declined
              .button
                button#submit.btn-primary Submit
