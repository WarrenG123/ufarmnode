doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='/bootstrap/css/bootstrap.css')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css')
  title Upload
  style.
    .row{
    padding-top: 20px;
    }
    .card {
    margin-bottom: 20px;
    }
    .button{
    margin-top: 10px;
    }
// nav starts Here
div(w3-include-html='/includes/navbar.html')
// nav bar ends here
.container-fluid
  .row.justify-content-center
    .col-md-7
      .card
        .card.header
          h5 UPLOAD HERE
        .card-body
          form#upload(action='#' name='upload form' onsubmit='validate(event)' method='post')
            .form.form-group
              label Product image
              input#pImage.form-control(type='file' name='productimage')
              small#imgErr
            .form.form-group
              label Product name
              input#pName.form-control(type='text' name='product name')
              small#pNameErr
            .form.form-group
              label Ward
              select#ward.form-control(name='ward')
                option(value='') (Select a ward)
                option(value='AgricOfficer') 1
                option(value='UrbanFarmer') 2
                option(value='FarmerOne') 3
                option(value='FarmerOne') 4
              small#wdErr
            .form.form-group
              label Date
              input#date.form-control(type='date' name='date')
              small#dateErr
            .form.form-group
              label Unit price
              input#uP.form-control(type='text' placeholder='UGX' name='unit price')
              small#uPErr
            .form.form-group
              label Quantity
              input#qty.form-control(type='text' name='quantity')
              small#qtyErr
            .form.form-group
              label Address
              input#adr.form-control(type='text' name='address')
              small#adrErr
            .form.form-group
              label Mode of payment
              label.form-check
                input#cash.form-check-input(type='checkbox' name='Cash' value='Cash')
                span Cash
              label.form-check
                input#mMoney.form-check-input(type='checkbox' name='mobile money' value='Mobile Money')
                span Mobile Money
              small#payErr
            .form.form-group
              label Mode of delivery
              label.form-check
                input#pick.form-check-input(type='checkbox' name='pickup' value='Pickup')
                span Pick up
              label.form-check
                input#hDeli.form-check-input(type='checkbox' name='home delivery' value='Home Delivery')
                span Home delivery
              small#deliErr
            .form.form-group
              label Produce type
              label.form-check
                input#org.form-check-input(type='radio' name='pType' value='organic')
                span Organic
              label.form-check
                input#nOrg.form-check-input(type='radio' name='pType' value='Non-organic')
                span Non-organic
              small#typeErr
            .button
              button#submit.btn-primary Submit
// footer starts here
div(w3-include-html='/includes/footer.html')
// footer ends here
script(src='/bootstrap/js/bootstrap.js')
script(src='/js/uploadValidate.js')
script(src='/includes/custom.js')
