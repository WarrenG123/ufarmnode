doctype html
head
  title UFARM
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  link(rel='stylesheet' href='/bootstrap/css/bootstrap.css')
  // <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
  style.
// nav starts Here
div(w3-include-html='/includes/navbar.html')
// nav bar ends here
// Carousel
#demo.carousel.slide(data-bs-ride='carousel')
  // Indicators/dots
  .carousel-indicators
    button.active(type='button' data-bs-target='#demo' data-bs-slide-to='0')
    button(type='button' data-bs-target='#demo' data-bs-slide-to='1')
    button(type='button' data-bs-target='#demo' data-bs-slide-to='2')
  // The slideshow/carousel
  .carousel-inner
    .carousel-item.active
      img.d-block(src='image/farmland.jpg' alt='farm' style='width:100%')
      .carousel-caption
        h3 WELCOME TO UFARM
        p Your one stop online food market
    .carousel-item
      img.d-block(src='image/crops.jpg' alt='crops' style='width:100%')
      .carousel-caption
        h3 WELCOME TO UFARM
        p Your one stop online food market
    .carousel-item
      img.d-block(src='image/browse.jpg' alt='plants' style='width:100%')
      .carousel-caption
        h3 WELCOME TO UFARM
        p Your one stop online food market
  // Left and right controls/icons
  button.carousel-control-prev(type='button' data-bs-target='#demo' data-bs-slide='prev')
    span.carousel-control-prev-icon
  button.carousel-control-next(type='button' data-bs-target='#demo' data-bs-slide='next')
    span.carousel-control-next-icon
p
  | Click here to begin 
  a(href='/auth/login.html') shopping
