doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  link(rel='stylesheet' href='/bootstrap/css/bootstrap.css')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='https://www.w3schools.com/w3css/4/w3.css')
  title Farmer One dashboard
// Sidebar
#mySidebar.w3-sidebar.w3-bar-block.w3-border-right
  button.w3-bar-item.w3-large(onclick='w3_close()') Close &times;
  a.w3-bar-item.w3-button(href='/uFarmerRegister') Register Urban Farmer
  a.w3-bar-item.w3-button(href='/ufupload') Farmer produce
  a.w3-bar-item.w3-button(href='#') Bookings and orders
  a.w3-bar-item.w3-button(href='#') Messages
  a.w3-bar-item.w3-button(href='#') Logout
.w3-green
  button.w3-button.w3-green.w3-xlarge(onclick='w3_open()') &#x2630;
.container-fluid 
  fieldset
    legend
      center
        h2
          b Farmer One Dashboard
    br
    .container
        table.table.table-striped.table-hover.table-bordered
            thead
                tr.table-primary
                    th(scope='col') Name
                    th(scope='col') product
                    th(scope='col') Ward
                    th(scope='col') Price in Ugx
                    th(scope='col') Quantity
                    th(scope='col') Type
                    th(scope='col') Status
                    th(scope='col') Action
            tbody
            if data.length 
                each product in data
                    tr
                        td #{product.fName}
                        td 
                          img(src=product.productimage,alt='image to be uploaded', style='max-width:200px; height:auto;')
                          h3 #{product.productname}
                        td #{product.ward}
                        td #{product.unitprice}
                        td #{product.quantity}
                        td #{product.pType}
                        td #{product.status}
                        td 
                          a.btn.btn-dark.btn-block(href="/approval/"+product.id) Edit
            else 
                p 
                  h4 There are no products for approval
form(method="POST" action='/logout')
   button.btn(type= 'submit' width='100px') Signout

