doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='/bootstrap/css/bootstrap.css')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css')
  title RegisterFO
  style.
    .card {
    margin-bottom: 20px;
    margin-top: 20px;
    }
    .h1 {
    font-family: Arial, Helvetica, sans-serif;
    font-size: xx-small;
    }
    .image {
    background-image: url("/image/farmland.jpg");
    /* The image used */
    background-color: #cccccc;
    /* Used if the image is unavailable */
    /* You must set a specified height */
    background-position: relative;
    /* Center the image */
    background-repeat: no-repeat;
    /* Do not repeat the image */
    background-size: cover;
    /* Resize the background image to cover the entire container */
    background-attachment: fixed;
    }
    fieldset {
    background-color: azure;
    }
    legend {
    background-color: rgb(128, 128, 128);
    color: rgb(15, 15, 15);
    }
    .button {
    margin-top: 10px;
    }
// nav starts Here
div(w3-include-html='/includes/navbar.html')
// nav bar ends here
.image
  .row.justify-content-center
    .col-md-6
      .card(style='position: relative;')
        .card-body
          h4 Farmer One register
          form#regform.reg(action='#' onsubmit='return validate (event)' method='post')
            fieldset
              legend Bio Data
              .form-group
                label First name:
                input#fName.form-control(type='text' name='firstname')
                small#fNameErr
              .form-group
                label Second name:
                input#sName.form-control(type='text' name='secondname')
                small#sNameErr
              .form-group
                label Date of birth:
                input#db.form-control(type='date' name='dob')
                small#dbErr
              .form-group
                label Gender:
                label.form-check.form-check-inline
                  input#male.form-check-input(type='radio' name='gender' value='male')
                  span Male
                label.form-check.form-check-inline
                  input#female.form-check-input(type='radio' name='gender' value='female')
                  span Female
                small#gndErr
            fieldset
              legend Other
              .form-group
                label Phone number:
                input#pNum.form-control(type='text' name='phone number')
                small#pNumErr
              .form-group
                label NIN:
                input#nin.form-control(type='text' name='NIN')
                small#ninErr
              .form-group
                label Address
                input#adr.form-control(type='text' name='address')
                small#adrErr
              .form-group
                label Residence type:
                input#rT.form-control(type='text' name='residence type')
                small#rTErr
              .form-group
                label Years spent in the area:
                input#tsa.form-control(type='number' name='time')
                small#tsaErr
              .form-group
                label Date of registration:
                input#dr.form-control(type='date' name='dreg')
                small#drErr
              .form-group
                label Ward:
                select#wd.form-control(name='ward')
                  option(value='') (Select ward)
                  option(value='1') 1
                  option(value='2') 2
                  option(value='3') 3
                  option(value='4') 4
                small#wdErr
              .form-group
                label Activities carried out:
                label.form-check
                  input#poultry.form-check-input(type='checkbox' name='poultry' value='Poultry Farming')
                  span Poultry Farming
                label.form-check
                  input#hort.form-check-input(type='checkbox' name='horticulture' value='Horticulture')
                  span Horticulture
                label.form-check
                  input#dairy.form-check-input(type='checkbox' name='dairy' value='Dairy farming')
                  span Dairy Farming
                small#actErr
            fieldset
              legend Authentication
              .form-group
                    label Role
                    select#role.form-control(name='role')
                      option(value='') (Select a role)
                      option(value='fo') Farmer One
                    small#roleErr
              .form-group
                label Unique number:
                input#uN.form-control(type='text' name='unique number')
                small#uNErr
              .form-group
                label(for='pwd') Password:
                input#pwd.form-control(type='password' name='password')
                small#pwdErr
            .button
              button#submit.btn.btn-primary.btn-block Submit
  // footer starts here
  div(w3-include-html='/includes/footer.html')
  // footer ends here
script(src='/bootstrap/js/bootstrap.js')
script(src='/js/fOnevalidate.js')
script(src='/includes/custom.js')
