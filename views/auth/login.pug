doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='/bootstrap/css/bootstrap.css')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css')
  title login
  style.
    .bi-person-circle {
    font-size: 100px;
    margin-left: 120px;
    }
    .image {
    background-image: url("/image/farmland.jpg");
    /* The image used */
    background-color: #cccccc;
    /* Used if the image is unavailable */
    height: 800px;
    /* You must set a specified height */
    background-position: center;
    /* Center the image */
    background-repeat: no-repeat;
    /* Do not repeat the image */
    background-size: cover;
    /* Resize the background image to cover the entire container */
    }
    .row {
    padding-top: 40px;
    }
    h1 {
    color: rgb(1, 2, 1);
    }
    .button {
    margin-top: 20px;
    }
    /*
    .logincard {
    padding-bottom: 20px;
    } */
    .form-row {
    display: flex;
    align-items: center;
    justify-content: center;
    }
// nav starts Here
div(w3-include-html='/includes/navbar.html')
// nav bar ends here
.image
  .container-fluid
    .row.justify-content-center
      .col-md-4
        .card-container
          .card
            .card-header
              h4 Login Here
            .card-body
              form#loginForm.login(action='#' name='login' onsubmit=' return validate (event)' method='post')
                .form.row
                  i.bi.bi-person-circle
                .form.row
                  .form-group
                    label Username
                    input#uN.form-control(type='text' name='username')
                    small#uNErr
                  .form-group
                    label Password
                    input#pwd.form-control(name='password' type='password')
                    small#pwdErr
                  .form-group
                    label Role
                    select#role.form-control(name='role')
                      option(value='') (Select a role)
                      option(value='FarmerOne') Customer
                      option(value='AgricOfficer') Agricultural Officer
                      option(value='UrbanFarmer') Urban Farmer
                      option(value='FarmerOne') Farmer One
                    small#roleErr
                .button
                  button#submit.btn.btn-primary LOGIN
        .card.bg-success(style='margin-top: 20px;')
          .card-body
            h4
              | If you dont have an account 
              a(href='/auth/signup.pug') register here
// footer starts here
div(w3-include-html='/includes/footer.pug')
// footer ends here
script(src='/js/bootstrap.bundle.js')
script(src='/includes/custom.js')
script(src='/js/loginValidate.js')
