doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='/bootstrap/css/bootstrap.css')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css')
  title login
  style.
    .bi-person-circle {
    font-size: 100px;
    margin-left: 120px;
    }
    .image {
    background-image: url("/image/farmland.jpg");
    background-color: #cccccc;
    height: 800px;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    }
    .row {
    padding-top: 40px;
    }
    h1 {
    color: rgb(1, 2, 1);
    }
    .button {
    margin-top: 20px;
    }
    .form-row {
    display: flex;
    align-items: center;
    justify-content: center;
    }
// nav starts Here
div(w3-include-html='/includes/navbar.html')
// nav bar ends here
.image
  .container-fluid
    .row.justify-content-center
      if message
              .alert.alert-signup= message
      .col-md-4
        .card-container
          .card
            .card-header
              h4 Login Here
            .card-body
              form#loginForm.login(action='/login' name='login' onsubmit=' return validate (event)' method='post')
                .form.row
                  i.bi.bi-person-circle
                .form.row
                  .form-group
                    label Username:
                    input#uN.form-control(type='text' name='uniqueid' placeholder='farmers should enter their unique id')
                    small#uNErr
                  .form-group
                    label Password:
                    input#pwd.form-control(name='password' type='password')
                    small#pwdErr
                .button
                  button#submit.btn.btn-primary LOGIN
        .card.bg-light(style='margin-top: 20px;')
          .card-header
            h4
              | If you dont have an account 
              a(href='/signup') register here
// footer starts here
div(w3-include-html='/includes/footer.html')
// footer ends here
script(src='/bootstrap/js/bootstrap.bundle.js')
script(src='/includes/custom.js')
script(src='/validate/loginValidate.js')
