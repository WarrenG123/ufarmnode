doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='../bootstrap/css/bootstrap.css')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css')
  title Sign up
style.
  .card {
  margin-top: 20px;
  margin-bottom: 20px;
  }
  fieldset {
  background-color: azure;
  }
  legend {
  background-color: rgb(128, 128, 128);
  color: rgb(15, 15, 15);
  }
  .image {
  background-image: url("/image/farmland.jpg");
  /* The image used */
  background-color: #cccccc;
  /* Used if the image is unavailable */
  /* You must set a specified height */
  background-position: relative;
  /* Center the image */
  background-repeat: no-repeat;
  /* Do not repeat the image */
  background-size: cover;
  /* Resize the background image to cover the entire container */
  background-attachment: fixed;
  }
// nav starts Here
div(w3-include-html='/includes/navbar.html')
// nav bar ends here
.image
  .row.justify-content-center
    .col-5
      .card
        .card-header SIGN UP
        .card-body
          form#signup(action='/signup' onsubmit='return validate(event)' method='post' name="signup")
            fieldset
              legend Bio-Data
              .form-group
                label(for='firstname') First name:
                input#fN.form-control(type='text' name='firstname')
                small#fNErr
              .form-group
                label(for='secondname') Second name:
                input#lN.form-control(type='text' name='secondname')
                small#lNErr
              .form-group
                label(for='dob') Date of birth:
                input#dob.form-control(type='date' name='dob')
                small#dbErr
              .form-group
                label(for='gender') Gender:
                label.form-check.form-check-inline
                  input#male.form-check-input(type='radio' name='gender' value='male')
                  span Male
                label.form-check.form-check-inline
                  input#female.form-check-input(type='radio' name='gender' value='female')
                  span Female
                small#gndErr
            fieldset
              legend Authentication
              .form-group
                label(for='phonenumber') Phone number:
                input#pNum.form-control(type='text' name='phonenumber')
                small#pNumErr
              .form-group
                label(for='username') User name:
                input#username.form-control(type='text' name='uniqueid')
                small#uNErr
              .form-group
                label Role
                select#role.form-control(name='role')
                  option(value='') (Select a role)
                  option(value='cus') Customer
                  option(value='ao') Agricultural Officer
                small#roleErr
              .form-group
                label(for='password') Password:
                input#pwd.form-control(type='password' name='password')
                small#pwdErr
            .form-group.form-check
              label.form-check-label
                input.form-check-input(type='checkbox')
                |  Remember me
            button.btn.btn-primary(type='submit') Submit
// footer starts here
div(w3-include-html='/includes/footer.html')
// footer ends here
script(src='/validate/signUpValidate.js')
script(src='/bootstrap/js/bootstrap.js')
script(src='/includes/custom.js')
